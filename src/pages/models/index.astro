---
import BaseLayout from '../../layouts/Layout.astro';
import { getAllModels } from '../../data/loadFindingModels';
const models = getAllModels();
---

<BaseLayout>
  <h1 slot="head">Finding Models Catalog</h1>
  <article class="prose max-w-none py-8">
    <p>This is a minimal catalog of available Finding Models. Click any slug to view details.</p>
    <ul class="list-disc pl-5">
      {models.map(model => (
        <li>
          <a href={`/models/${model.slug}/`} class="text-blue-600 hover:underline">
            {model.slug}
          </a>
        </li>
      ))}
    </ul>
  </article>
</BaseLayout>
